<% layout('./layouts/boilerplate') -%>
<header>
    <%- include('./partials/navbar') %>
</header>
<main>
    <link rel="stylesheet" href="/stylesheets/sudoku.css">
    <div class="container my-4">
        <div class="row">
            <div class="col-xl-1">
                <!-- empty space -->
            </div>
            <div class="col-lg-6 col-xl-5 mb-2">
                <div class="sudoku-board mb-2 bg-primary">
                    <div class="sudoku-board-overlay">
                    </div>
                    <% for( let row = 1; row <= 9; row++ ) { %>
                        <div class="sudoku-row m-0 p-0">
                            <% for( let col = 1; col <= 9; col++ ) { %>
                                <span class="sudoku-square" id="sudoku-square-<%=row%>-<%=col%>">0</span>
                            <% } %>
                        </div>
                    <% } %>
                </div>
                <div class="sudoku-numbers bg-success">
                    <% for( let i = 1; i <= 9; i++ ) { %>
                        <button type="button" class="sudoku-number-button" id="sudoku-number-button-<%=i%>"><%=i%></button>
                    <% } %>
                </div>
            </div>
            <div class="col-lg-6 col-xl-5 mb-2">
                <div class="sudoku-sideboard bg-secondary">
                    <div class="sudoku-menu">
                        <button type="button" class="sudoku-menu-button" id="sudoku-new-game-button">New Game</button>
                        <fieldset id="sudoku-difficulty-setting">
                            Difficulty:
                            <label for="difficulty-easy">Easy</label>
                            <input type="radio" name="difficulty" id="difficulty-easy">
                            <label for="difficulty-medium">Medium</label>
                            <input type="radio" name="difficulty" id="difficulty-medium" checked>
                            <label for="difficulty-hard">Hard</label>
                            <input type="radio" name="difficulty" id="difficulty-hard">
                        </fieldset>
                        Highlight:
                        <fieldset id="sudoku-highlight-same-numbers">
                            <input type="checkbox" name="same-numbers" id="same-numbers-checkbox">
                            <label for="same-numbers-checkbox">Same Numbers</label>
                        </fieldset>
                        <fieldset id="sudoku-highlight-conflicting-numbers">
                            <input type="checkbox" name="conflicting-numbers" id="conflicting-numbers-checkbox">
                            <label for="conflicting-numbers-checkbox">Conflicting Numbers</label>
                        </fieldset>
                    </div>
